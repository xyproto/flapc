// Test C library FFI (Foreign Function Interface)
import sdl3 as sdl

// Test 1: Use C constants from headers
init_flags := sdl.SDL_INIT_VIDEO
printf("SDL_INIT_VIDEO constant: %.0f\n", init_flags)

// Test 2: Call SDL_Init with the constant
result := sdl.SDL_Init(init_flags)
printf("SDL_Init result: %.0f\n", result)

// Clean up
sdl.SDL_Quit()

exit(0)

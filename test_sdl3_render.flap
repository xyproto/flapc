import sdl3 as sdl

println("Testing SDL3 with CreateWindowAndRenderer...")

result := sdl.SDL_Init(sdl.SDL_INIT_VIDEO)
printf("SDL_Init returned: %d\n", result)

// Try using SDL_CreateWindowAndRenderer instead
println("Using SDL_CreateWindowAndRenderer...")

// This function takes title, w, h, flags, and pointers to window and renderer
// For now, let's just test regular window creation with different flags

window := sdl.SDL_CreateWindow("Test", 640, 480, 0)
printf("Window1 (flags=0): %d\n", window)

// Try with SDL_WINDOW_HIDDEN
window2 := sdl.SDL_CreateWindow("Test2", 640, 480, 0x00000008)
printf("Window2 (hidden): %d\n", window2)

sdl.SDL_Quit()
println("Done")

// Both pyramids with height=3
height := 3

printf("ASCII Pyramid:\n")

@ i in 0..<height  max 100000 {
    spaces := height - i - 1
    @ j in 0..<spaces  max 100000 {
        printf(" ")
    }
    stars := 2 * i + 1
    @ k in 0..<stars  max 100000 {
        printf("*")
    }
    printf("\n")
}

printf("Inverted:\n")

@ i in 0..<height  max 100000 {
    row := height - i - 1
    @ j in 0..<i  max 100000 {
        printf(" ")
    }
    numStars := 2 * row + 1
    @ k in 0..<numStars  max 100000 {
        printf("*")
    }
    printf("\n")
}

printf("Done\n")

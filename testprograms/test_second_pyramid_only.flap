// Just the inverted pyramid - test if second loop alone works
height := 10

printf("\nInverted Pyramid:\n\n")

// Draw inverted pyramid
@ i in 0..<height {
    row := height - i - 1

    // Print spaces
    @ j in 0..<i {
        printf(" ")
    }

    // Print stars
    numStars := 2 * row + 1
    @ k in 0..<numStars {
        printf("*")
    }

    printf("\n")
}

printf("\nArt complete!\n")

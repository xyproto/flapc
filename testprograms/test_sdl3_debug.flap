import sdl3 as sdl

// Test SDL_CreateWindow with different arguments
// SDL_CreateWindow signature: SDL_Window* SDL_CreateWindow(const char* title, int w, int h, Uint32 flags)

// Try with literal string
window1 := sdl.SDL_CreateWindow("Test Window", 800, 600, 0)
printf("Window 1 (literal): %.0f\n", window1)

// Try with variable
title := "Variable Title"
window2 := sdl.SDL_CreateWindow(title, 800, 600, 0)
printf("Window 2 (variable): %.0f\n", window2)

// Check if SDL error occurred
error_msg := sdl.SDL_GetError()
printf("SDL Error (if any): %p\n", error_msg)

// Clean up if windows were created
window1 != 0 {
    sdl.SDL_DestroyWindow(window1)
}
window2 != 0 {
    sdl.SDL_DestroyWindow(window2)
}
import sdl3 as sdl

// Initialize SDL first
init_result := sdl.SDL_Init(32) // SDL_INIT_VIDEO = 0x20 = 32
printf("SDL_Init result: %.0f\n", init_result)

// Now try to create window
win := sdl.SDL_CreateWindow("Test", 800, 600, 0)
printf("Window handle: %.0f\n", win)

// Clean up
win != 0 {
    printf("Destroying window\n")
    sdl.SDL_DestroyWindow(win)
}

sdl.SDL_Quit()
printf("Done\n")